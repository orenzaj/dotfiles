############################# PROMPT #################################

##########
# Colors #
##########
WHITE="\[$(tput setaf 255)\]"
PINK="\[$(tput setaf 212)\]"
RED="\[$(tput setaf 9)\]"
BLUE="\[$(tput setaf 39)\]"
YELLOW="\[$(tput setaf 226)\]"
GREEN="\[$(tput setaf 48)\]"
PURPLE="\[$(tput setaf 141)\]"
INDIGO="\[$(tput setaf 69)\]"


################
# Current Time #
################
ct(){
    CTIME="\@"
    echo "${WHITE}[${PINK}${CTIME}${WHITE}] "
}

################
# Current User #
################
cu() {
    CUSER="\u"
    echo "${RED}${CUSER}${WHITE} "
}

################
# Current Host #
################
ch() {
    CHOST="\h"
    echo "at ${BLUE}${CHOST}${WHITE} "
}

#####################
# Working directory #
#####################
wd() {
    CDIR="\w"
    echo "in ${YELLOW}${CDIR}${WHITE} "
}

###############
# Virtual Env #
###############
ve() {
    if [ ${VIRTUAL_ENV} ]; then
        echo "(${GREEN}$(basename $VIRTUAL_ENV)${WHITE}) "
    fi
}

##############
# Git prompt #
##############
gp(){
	if [ -d .git ] || git rev-parse --git-dir > /dev/null 2>&1 ; then
        echo "on ${PURPLE}$(__git_ps1 %s)${WHITE} "
	fi
}

###############
# Second line #
###############
sl(){
    SYMBOL="âžœ"
    echo "\r\n${INDIGO}${SYMBOL} ${WHITE} "
}

set_prompt() {
    PS1="`ct``ve``cu``ch``wd``gp``sl`"
}

PROMPT_COMMAND=set_prompt

################################################
# # Disables the extra env variable on prompt. #
# ##############################################
if [[ $(uname -s) == Linux ]]; then
    export VIRTUAL_ENV_DISABLE_PROMPT=1
else
    unset DYLD_LIBRARY_PATH
fi
