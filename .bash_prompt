############################# PROMPT #################################
######################################################################
# Current Time
######################################################################
ct(){
    CURRENT_TIME=`date +%X`
    echo -e "$(tput setaf 255)[$(tput setaf 212)${CURRENT_TIME}$(tput setaf 255)] "
}

######################################################################
# Current User
######################################################################
cu() {
    echo -e "$(tput setaf 9)`whoami`$(tput setaf 255) "
}

######################################################################
# Current Host
######################################################################
ch() {
    echo -e "at $(tput setaf 33)`hostname`$(tput setaf 255) "
}

######################################################################
# Working directory
######################################################################
wd() {
    echo -e "in $(tput setaf 226)`pwd | sed 's/\/home\/jorenza/\\~/'`$(tput setaf 255) "
}

######################################################################
# Virtual Env
######################################################################
ve() {
    if [ ${VIRTUAL_ENV}  ]; then
        echo -e "$(tput setaf 255)($(tput setaf 48)`basename ${VIRTUAL_ENV}`$(tput setaf 255)) "
    fi
}

######################################################################
# Git branch
######################################################################
gb(){
    BRANCH=`__git_ps1 %s`
	if [ ! "${BRANCH}" == "" ]; then
        echo -e "on $(tput setaf 135)${BRANCH}$(tput setaf 255) "
	fi
}

######################################################################
# Second line
######################################################################
sl(){
    echo -e "\n\r$(tput setaf 69)âžœ $(tput setaf 255)"
}

export PS1="\`ct\`\`cu\`\`ch\`\`wd\`\`ve\`\`gb\`\`sl\`"
