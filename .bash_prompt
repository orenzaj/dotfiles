### PROMPT ###

# Host
user() {
    echo -e "$(tput setaf 9)`whoami`$(tput setaf 255)"
}

# Host
host() {
    echo -e "at $(tput setaf 33)`hostname`$(tput setaf 255)"
}

# Working directory
wd() {
    echo -e "in $(tput setaf 226)`pwd | sed 's/\/home\/jorenza/~/'`$(tput setaf 255)"
}

# Virtual Env
ve() {
    if [ ${VIRTUAL_ENV}  ]; then
        CURRENT_ENV=`basename ${VIRTUAL_ENV}`
        echo -e "$(tput setaf 255)($(tput setaf 33)${CURRENT_ENV}$(tput setaf 255))"
    else
        echo ""
    fi
}

# Git branch
gp(){
    BRANCH=`__git_ps1 %s`
	if [ ! "${BRANCH}" == "" ]
	then
        prefix=`echo -e "$(tput setaf 255)on"`
        echo -e "${prefix} $(tput setaf 135)${BRANCH}"
	fi
}

