############################# PROMPT #################################

######################################################################
# Colors
######################################################################
white="$(tput setaf 255)"
pink="$(tput setaf 212)"
red="$(tput setaf 9)"
blue="$(tput setaf 39)"
yellow="$(tput setaf 226)"
green="$(tput setaf 48)"
purple="$(tput setaf 141)"
indigo="$(tput setaf 69)"


######################################################################
# Current Time
######################################################################
ct(){
    CTIME="\[\@\]"
    echo -e "${white}[${pink}${CTIME}${white}] "
}

######################################################################
# Current User
######################################################################
cu() {
    CUSER="\[\u\]"
    echo -e "${red}${CUSER}${white} "
}

######################################################################
# Current Host
######################################################################
ch() {
    CHOST="\[\h\]"
    echo -e "at ${blue}${CHOST}${white} "
}

######################################################################
# Working directory
######################################################################
wd() {
    CDIR="\[\w\]"
    echo -e "in ${yellow}${CDIR}${white} "
}

######################################################################
# Virtual Env
######################################################################
ve() {
    if [ ${VIRTUAL_ENV} ]; then
        echo -e "(${green}$(basename $VIRTUAL_ENV)${white}) "
    fi
}

#####################################################################
# Git prompt
######################################################################
gp(){
	if [ -d .git ] || git rev-parse --git-dir > /dev/null 2>&1 ; then
        echo -e "on ${purple}$(__git_ps1 %s)${white} "
	fi
}

######################################################################
# Second line
######################################################################
sl(){
    SYMBOL="\[âžœ\]"
    echo -e "\r\n${indigo}${SYMBOL} ${white} "
}

set_prompt() {
    PS1="`ct``ve``cu``ch``wd``gp``sl`"
}

PROMPT_COMMAND=set_prompt
