# Disables the extra env variable printing.
if [[ $(uname -s) == Linux  ]]; then
    export VIRTUAL_ENV_DISABLE_PROMPT=1
else
    unset DYLD_LIBRARY_PATH
fi

export CPPFLAGS="-P"

##########################################################################################
## Git
##########################################################################################
export GIT_PROMPT_ONLY_IN_REPO=1
export GIT_PS1_SHOWCOLORHINTS=true
export GIT_PS1_SHOWDIRTYSTATE=1
export PYENV_ROOT=/home/jorenza/.pyenv

##########################################################################################
# FZF
##########################################################################################
export FZF_DEFAULT_COMMAND='rg --smart-case --max-columns=150 --files --colors=line:none --colors=line:style:bold --no-ignore --hidden --follow --line-number --no-heading --fixed-strings --ignore-case --glob "!.git/*" --color "always" "!.git/*" '

##########################################################################################
# FZF
##########################################################################################
export RIPGREP_CONFIG_PATH=$HOME/.ripgreprc rg foo
